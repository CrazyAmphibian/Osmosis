getfiles = function(dir) --returns table of all files in directory
	local str
	local out={}
	
	if OS =="Linux" then
		str= io.popen("ls \""..dir.."\" -w 1")
	elseif OS=="Windows" then
		str = io.popen("dir /b \""..dir.."\"")
	end
	
	for i in str:lines() do
		table.insert(out, i)
	end
	
return out
end



